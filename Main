import java.util.Scanner;
import java.util.Random;
public class Main
{
   public static void main(String args[]){
       Scanner input = new Scanner(System.in);
       System.out.println("If you provide me some information I will provide a Science Fiction name for you.");
       System.out.println("Please have all responses be at least three characters long.");
       System.out.print("Enter your first name: ");
       String name1 = input.nextLine();
       System.out.print("Enter your last name: ");
       String name2 = input.nextLine();
       System.out.print("Enter the city where you or one of your parents were born: ");
       String city = input.nextLine();    
       System.out.print("Enter the name of your grammar school: ");
       String school = input.nextLine();
       System.out.print("Enter the first name of a sibling or other relative: ");
       String relative1 = input.nextLine();
       System.out.print("Enter the first name of a second sibling or relative: ");
       String relative2 = input.nextLine();
       
       String sciFN = name1.substring(0, 3) + name2.substring(0, 2); 
       sciFN = (sciFN.substring(0, 1).toUpperCase()) + (sciFN.substring(1).toLowerCase()); 
       String sciLN = city.substring(0, 2) + school.substring((school.length() - 3)); 
       sciLN = (sciLN.substring(0, 1).toUpperCase()) + (sciLN.substring(1).toLowerCase()); 
       int index1 = (int)(Math.random() * (relative1.length() - 1)) + 1;
       int index2 = (int)(Math.random() * (relative2.length() - 1)) + 1;
       String sciOrigin = relative1.substring(index1) + relative2.substring(index2);
       sciOrigin = (sciOrigin.substring(0, 1).toUpperCase()) + (sciOrigin.substring(1).toLowerCase()); 
       
       String sciName = sciFN + " " + sciLN + " of " + sciOrigin;
       System.out.println("Hello " + sciName + ". Welcome!");
    }
}
